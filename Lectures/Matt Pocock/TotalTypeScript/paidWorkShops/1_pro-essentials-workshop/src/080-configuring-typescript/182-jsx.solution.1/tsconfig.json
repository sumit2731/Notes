{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    // this creates a jsx file, jsx is remains as it is
    // this is good option if you are not bundling with tsc. 
    // if we are bundling for a library we want this to be transformed into js
    "jsx": "preserve"
  },
}