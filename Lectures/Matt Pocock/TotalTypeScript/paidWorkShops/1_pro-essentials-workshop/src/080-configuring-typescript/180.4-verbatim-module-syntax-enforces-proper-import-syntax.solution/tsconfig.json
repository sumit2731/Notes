{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    // this gives error if you use ESM syntax inside cts files
    "verbatimModuleSyntax": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "outDir": "./dist",
  },
}